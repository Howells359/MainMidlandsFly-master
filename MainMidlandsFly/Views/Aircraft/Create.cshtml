@model MainMidlandsFly.Models.Aircraft

@{
    ViewData["Title"] = "Create";
}

<br />
<h2>Create</h2>

<h4>Aircraft</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AircraftRegNo" class="control-label"></label>
                <input asp-for="AircraftRegNo" class="form-control" />
                <span asp-validation-for="AircraftRegNo" class="text-danger"></span>
            </div>

            @*<div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                :   <select asp-for="Type" asp-items="Model.AircraftCategory">
                    <option disabled selected>--- SELECT ---</option>
                </select> <br />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>


            <div id="MaxSeating" class="form-group">
                <label asp-for="Maximum_Seating_Capacity" class="control-label"></label>
                <input asp-for="Maximum_Seating_Capacity" class="form-control" />
                <span asp-validation-for="Maximum_Seating_Capacity" class="text-danger"></span>
            </div>
            
           <div id="MaxCargo" class="form-group">
                <label asp-for="Maximum_Cargo_Capacity" class="control-label"></label>
                <input asp-for="Maximum_Cargo_Capacity" class="form-control" />
                <span asp-validation-for="Maximum_Cargo_Capacity" class="text-danger"></span>
            </div>
           


            @*<div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="FlyingHoursCount" class="control-label"></label>
                <input asp-for="FlyingHoursCount" class="form-control" />
                <span asp-validation-for="FlyingHoursCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


<script type="text/javascript">
    $(document).ready(function () {

        $('#MaxSeating').hide();
        $('#MaxCargo').hide();
        $('#Type').change(function () {
            if ($(this).val() == 'Passenger') {
                $('#MaxSeating').show();
                $('#MaxCargo').hide();
                $('.Maximum_Cargo_Capacity').val(0)
            }
            else {
                $('#MaxCargo').show();
                $('#MaxSeating').hide();
                ('.Maximum_Seating_Capacity').val(0)
            }
        });
    });
</script>
}
