@model MainMidlandsFly.Models.Cargo_Aircraft_Crew_Schedule_Model

@{
    ViewData["Title"] = "Create";
}

<br/>
<h1>Cargo Aircraft</h1>
<br/>
<h4>Select Crew memebers for Cargo Aircraft</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="InsertCargoSchedule">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="FlightId" class="control-label"></label>*@
                <input asp-for="FlightId" class="form-control" type="hidden"/>
                <span asp-validation-for="FlightId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AircraftId" class="control-label"></label>
                <select asp-for="AircraftId" class="form-control" asp-items="@(new SelectList(Model.Aircraft_list, "ID", "AircraftRegNo"))"> </select>
                @*<input asp-for="AircraftId" class="form-control" />*@
                <span asp-validation-for="AircraftId" class="text-danger"></span>
            </div>
            

            <div class="form-group">
                <label asp-for="FlightCrewId" class="control-label"></label>
                <select asp-for="FlightCrewId" class="form-control" asp-items="@(new SelectList(Model.FlightCrewId_list, "CrewId", "Name"))"> </select>
                @*<input asp-for="CabinCrewId" class="form-control" />*@
                <span asp-validation-for="FlightCrewId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlightCrewId2" class="control-label"></label>
                <select asp-for="FlightCrewId2" class="form-control" asp-items="@(new SelectList(Model.FlightCrewId2_list, "CrewId", "Name"))"> </select>
                @*<input asp-for="CabinCrewId2" class="form-control" />*@
                <span asp-validation-for="FlightCrewId2" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FlightCrewId3" class="control-label"></label>
                <select asp-for="FlightCrewId3" class="form-control" asp-items="@(new SelectList(Model.FlightCrewId3_list, "CrewId", "Name"))"> </select>
                @*<input asp-for="CabinCrewId" class="form-control" />*@
                <span asp-validation-for="FlightCrewId3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flying_Hours" class="control-label"></label>
                <input asp-for="Flying_Hours" class="form-control" />
                <span asp-validation-for="Flying_Hours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Flight" asp-action="Index">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
