                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CrewId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CrewId">Details</a> |
