@model MainMidlandsFly.Models.CrewViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create New Crew Member</h2>

@*<h4>Crew</h4>*@
<hr />

<div>
    
        <form asp-controller="Crew" asp-action="Create" method="post">
            <div>
                <h4>Name and Role</h4>
                
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <br />

                <label asp-for="Type" class="control-label"></label>
                :   <select asp-for="Type" asp-items="Model.Roles">
                    <option disabled selected>--- SELECT ---</option>
                </select> <br />
                <span asp-validation-for="Type" class="text-danger"></span>
                <br />

                <label asp-for="DateOfBirth" class="control-label"></label>
                <input asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <div>
                <h4>Address Lookup</h4>

                <label asp-for="HouseNo" class="control-label"></label>
                <input asp-for="HouseNo" class="form-control" />
                <span asp-validation-for="HouseNo" class="text-danger"></span>
                <br />

                <label asp-for="postcode" class="control-label"></label>
                <input asp-for="postcode" class="form-control" />
                <span asp-validation-for="postcode" class="text-danger"></span>
                <br /> 
                
                <input type="submit" name="click" value="Find" class="btn btn-default" />
                
            </div>

            @*@Html.Partial("_CreateAddressLookup", Model)*@


            <div class="multiline">

                @if (@Model.Address != null)
                {
                    @Model.Address;
                }
                else
                {
                    @ViewBag.msg
                }
                <br />
                <br />
            </div>
            
           <div>
                <h4>Contact Details</h4>

                <div class="form-group">
                    <label asp-for="MobNo" class="control-label"></label>
                    <input asp-for="MobNo" class="form-control" />
                    <span asp-validation-for="MobNo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <input type="submit" name="click" value="Create" class="btn btn-default" />
    </form>
</div>



<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
